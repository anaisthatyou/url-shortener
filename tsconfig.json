{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "inlineSourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
  },
  "include": [
    "src",
  ],
  "exclude": [
    "**/__tests__/**/*",
  ]
}
